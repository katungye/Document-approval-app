                                                                      alert(data.message);
                                                                  } else if (data.error) {
                                                                      alert(data.error);
                                                                  }
                                                              }).catch(error => console.error('Error:', error));
                                                        });
                                                    });
                                                
                                                    document.querySelectorAll('.reject-btn').forEach(button => {
