                                                        button.addEventListener('click', function() {
                                                            const documentId = this.getAttribute('data-id');
                                                            fetch(`/documents/approve/${documentId}`, {
                                                                method: 'POST',
                                                                headers: { 'Content-Type': 'application/json' }
                                                            }).then(response => response.json())
                                                              .then(data => {
