<%- include('partials/header') %>
<%- include('partials/navbar') %>
<div class="container-fluid center-content">
  <div class="row align-items-center justify-content-center w-100">
    <!-- Register Form -->
    <div class="col-12 col-md-6 d-flex flex-column justify-content-center align-items-center">
        <a href="/">
            <img src="/static/images/logo.png" alt="logo" width="200">
        </a>
      
        <form action="/auth/register" method="POST" class="w-100" id="registerForm">
    
          <!-- First Name -->
          <div class="mb-3">
              <label for="fname" class="form-label">First Name</label>
              <input type="text" class="form-control" id="fname" name="fname" required>
          </div>
      
          <!-- Last Name -->
          <div class="mb-3">
              <label for="lname" class="form-label">Last Name</label>
              <input type="text" class="form-control" id="lname" name="lname" required>
          </div>
      
          <!-- Email -->
          <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" required>
          </div>
      
          <!-- Password -->
          <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
          </div>
      
          <!-- Confirm Password -->
          <div class="mb-3">
              <label for="confirmPassword" class="form-label">Confirm Password</label>
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
          </div>
      
          <!-- Role ID (hidden field for simplicity) -->
          <input type="hidden" name="roleId" value="1"> <!-- Adjust the value as needed -->
      
          <!-- Submit Button -->
            <button type="submit" class="btn btn-primary btn-lg w-100">Register</button>
      </form>
      
      <div class="mt-3">
        <p>Already have an account? <a href="/auth/login">Login here</a></p>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>